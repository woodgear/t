{
	"compilerOptions": {
		"sourceMap": true,
        "module": "commonjs",
        "esModuleInterop": true,
		"noImplicitAny": true,
		"types": [
            "mocha",
			"node"
		],
		"typeRoots": [
			"./src/types",
			"node_modules/@types"
		],
		"baseUrl": "./src",
		"paths": {
			"src/*": [
				"*"
			]
		},
		"target": "es6",
		"outDir": "dist",
		"declaration": true
	},
	"include": [
        "src/**/*",
        "tests/**/*"
	]
}